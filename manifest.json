{
	"manifest_version": 3,
	"name": "Gloriosa",
	"version": "0.0.2",
	"description": "Get content in Markdown",
	"icons": {
		"48": "icons/icon_gray.png",
		"96": "icons/icon_gray.png"
	},
	"background": {
		"service_worker": "gloriosa_background.js",
		"scripts": ["gloriosa_background.js"],
		"persistent": false
	},
	"action": {
		"default_icon": "icons/icon_lightgray.png",
		"default_title": "Get content in Markdown"
	},
	"commands": {
		"get-content-in-markdown": {
			"description": "Get content in Markdown"
		}
	},
	"permissions": ["activeTab", "scripting", "clipboardWrite"],
	"host_permissions": ["<all_urls>"],
	"browser_specific_settings": {
		"gecko": {
			"id": "{ee5b47ec-fc7c-4ff3-b136-6778dda99189}",
			"strict_min_version": "109.0"
		}
	}
}
